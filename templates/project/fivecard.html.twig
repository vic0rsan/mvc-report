    <a href="{{ url("project_index") }}">Hem</a> | <a href="{{ url("project_game") }}">Spelet</a> | <a href="{{ path("project_about") }}">Om</a>
</nav>
<h1>{{ title }}</h1>
{% if gameover == false %}
    <h2>Runda: {{ round }}</h2>
{% endif %}
<h2>Pott: {{ pot }} SEK</h2>
<h2>{{ status }}</h2>
<form class="poker" action="/proj/game/swap" method="POST">
    <div class="card-grid">
    {% for key, card in player %}
        <div>
            {% if card.suite == "heart" or card.suite == "diamond" %}
                <div class="card red-card">{{card.getCardRep}}</div>
            {% else %}
                <div class="card black-card">{{card.getCardRep}}</div>
            {% endif %}
            {% if gameover == false %}
                {% if bet == false %}
                    <input type="checkbox" name={{key}} value={{key}}>
                {% endif %}
            {% endif %}
        </div>
    {% endfor %}
    </div>
    {% if gameover == false %}
        {% if bet == false %}
        <div class="poker-input">
            <input class="poker-button" type="submit" value="Byt">
        </div>
        {% endif %}
    {% endif %}
</form>
{% if bet == true and gameover == false %}
    <form class="poker" action="/proj/game/pot" method="POST">
        <input class="poker-button" type="submit" value="SÃ¤tt in">
